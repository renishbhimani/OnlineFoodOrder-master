@{
    ViewData["Title"] = "Customer Add/Edit";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

@model OnlineFoodOrder.Areas.Customer.Models.CustomerModel

<div class="page-content-wrapper">
    <div class="portlet light bordered margin-top-10">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-directions font-green hide"></i>
                <span class="caption-subject bold font-dark uppercase">Customer Add/Edit</span>
            </div>
            <div class="actions">
                <div class="btn-group btn-group-devided">
                    <a asp-area="Customer" asp-controller="Customer" asp-action="Index" class="btn green btn-rounded"><i class="fa fa-plus"></i>&nbsp;Customer List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-wrapper">
    <div class="portlet light portlet-fit portlet-form bordered">
        <div class="portlet-body">
            <form method="post" asp-area="Customer" asp-controller="Customer" asp-action="Save" enctype="multipart/form-data">
                @Html.HiddenFor(x=>x.CustomerID)

                <div class="form-body">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input type="text" asp-for="CustomerName" class="form-control" id="form_control_1">
                        <label for="form_control_1">Customer Name</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-warning">
                        <input type="text" asp-for="Address" class="form-control" id="form_control_1">
                        <label for="form_control_1">Address</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-warning">
                        <input type="text" asp-for="MobileNo" class="form-control" id="form_control_1">
                        <label for="form_control_1">Mobile No.</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-warning">
                        <input type="text" asp-for="Email" class="form-control" id="form_control_1">
                        <label for="form_control_1">Email</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-warning">
                        <input type="text" asp-for="Password" class="form-control" id="form_control_1">
                        <label for="form_control_1">Password</label>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn dark" />
                            <a asp-area="Customer" asp-controller="Customer" asp-action="Index" class="btn default">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
}