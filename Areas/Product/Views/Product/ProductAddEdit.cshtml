@{
    ViewData["Title"] = "Product Add/Edit";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

@model OnlineFoodOrder.Areas.Product.Models.ProductModel

<div class="page-content-wrapper">
    <div class="portlet light bordered margin-top-10">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-directions font-green hide"></i>
                <span class="caption-subject bold font-dark uppercase">Product Add/Edit</span>
            </div>
            <div class="actions">
                <div class="btn-group btn-group-devided">
                    <a asp-area="Product" asp-controller="Product" asp-action="Index" class="btn green btn-rounded"><i class="fa fa-plus"></i>&nbsp;Product List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-wrapper">
    <div class="portlet light portlet-fit portlet-form bordered">
        <div class="portlet-body">
            <form method="post" asp-area="Product" asp-controller="Product" asp-action="Save" enctype="multipart/form-data">
                @Html.HiddenFor(x=>x.ProductID)

                <div class="form-body">
                    <div class="form-group form-md-line-input form-md-floating-label has-error">
                        <select asp-for="FoodCategoryID" asp-items="@(new SelectList(ViewBag.FoodCategoryList,"FoodCategoryID","FoodCategoryName"))" class="form-control">
                            <option value="">Select FoodCategory</option>
                        </select>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <input type="text" asp-for="ProductName" class="form-control" id="form_control_1">
                        <label for="form_control_1">Product Name</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-warning">
                        <input type="text" asp-for="Description" class="form-control" id="form_control_1">
                        <label for="form_control_1">Description</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-warning">
                        <input type="text" asp-for="Price" class="form-control" id="form_control_1">
                        <label for="form_control_1">Price</label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-success">
                        <input type="file" asp-for="File" class="form-control" id="form_control_1">
                        <label for="form_control_1"></label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-success">
                        <input type="file" asp-for="File" class="form-control" id="form_control_1">
                        <label for="form_control_1"></label>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label has-success">
                        <input type="file" asp-for="File" class="form-control" id="form_control_1">
                        <label for="form_control_1"></label>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn dark" />
                            <a asp-area="Product" asp-controller="Product" asp-action="Index" class="btn default">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
}