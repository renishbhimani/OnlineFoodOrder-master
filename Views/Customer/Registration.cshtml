
@{
    ViewData["Title"] = "Registration Detail";
    Layout = "~/Views/Shared/Client/_Layout_Login.cshtml";
}

@model OnlineFoodOrder.Areas.Customer.Models.CustomerModel

<div class="logo">
    <h2 class="bold text-danger">Welcom to Registration From</h2>
</div>
<div class="content">
    <form class="login-form" method="post" asp-controller="Customer" asp-action="Save">
        <h3 class="form-title font-green">Sign In</h3>
        @if (TempData["Error"] != null)
        {
            <div class="text-danger">@Html.Raw(TempData["Error"]) </div>
        }
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="text" asp-for="CustomerName" placeholder="Enter Username" />
            @*<span asp-validation-for="UserName" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="text" asp-for="Address" placeholder="Enter Address" />
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="text" asp-for="MobileNo" placeholder="Enter Mobile No." />
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="text" asp-for="Email" placeholder="Enter Email" />
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="password" asp-for="Password" placeholder="Enter Password" />
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
        </div>
        <div class="form-actions text-center">
            <button type="submit" class="btn green uppercase">Login</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
