@{
    ViewData["Title"] = "Item List";
    Layout = "~/Views/Shared/Client/_Layout.cshtml";
}

@using System.Data

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/Client/img/breadcrumb.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Food Shop</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-7">
                <div class="filter__item">
                    <div class="row">
                        
                    </div>
                </div>

                <div class="row">

                    @foreach (DataRow dr in Model.Rows)
                    {
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="@Url.Content(dr["ProductImage"].ToString())">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a asp-controller="Product" asp-action="ProductDetail" asp-route-ProductID="@Convert.ToInt32(dr["ProductID"])"><i class="fa fa-retweet"></i></a></li>
                                        <li><a asp-controller="Order" asp-action="Save" asp-route-ProductID="@Convert.ToInt32(dr["ProductID"])"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a>@dr["ProductName"]</a></h6>
                                    <h5>@dr["Price"]</h5>
                                </div>
                            </div>
                        </div>

                    }

                </div>

                <div class="product__pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->